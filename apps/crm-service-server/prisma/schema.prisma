datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Opportunity {
  createdAt         DateTime  @default(now())
  expectedCloseDate DateTime?
  id                String    @id @default(cuid())
  stage             String?
  updatedAt         DateTime  @updatedAt
  value             Float?
}

model Activity {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Customer {
  address   String?
  company   String?
  contacts  Contact[]
  createdAt DateTime  @default(now())
  email     String?
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  phone     String?
  updatedAt DateTime  @updatedAt
}

model Contact {
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  email      String?
  id         String    @id @default(cuid())
  phone      String?
  position   String?
  updatedAt  DateTime  @updatedAt
}

model Lead {
  createdAt      DateTime @default(now())
  estimatedValue Float?
  id             String   @id @default(cuid())
  source         String?
  status         String?
  updatedAt      DateTime @updatedAt
}
